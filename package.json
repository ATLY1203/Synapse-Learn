{
  "name": "synapse-learn",
  "version": "1.0.0",
  "description": "A secure learning platform for KSSM textbooks",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "webpack --mode production",
    "build:server": "babel server -d dist/server",
    "test": "jest",
    "test:security": "npm audit && npm run test:lint",
    "test:lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "deploy": "npm run build && npm run security:audit",
    "deploy:prod": "NODE_ENV=production npm run deploy",
    "setup:env": "cp env.example .env && echo 'Please edit .env with your actual values'",
    "validate:config": "node -e \"require('./server/config.js').validateConfig()\""
  },
  "keywords": [
    "education",
    "learning",
    "kssm",
    "textbooks",
    "firebase",
    "security"
  ],
  "author": "Synapse Learn Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^11.11.1",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "crypto": "^1.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/synapse-learn.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/synapse-learn/issues"
  },
  "homepage": "https://synapse-learn.com",
  "security": {
    "audit": true,
    "fund": false
  }
} 